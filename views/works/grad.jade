extends ../layout

block title
	title Работы

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/works.css' + version)

block content_scripts
	script(type='text/javascript', src='/scripts/works.js' + version)

mixin work_img(file)
	- var svg = fs.readFileSync(file)
	.work_img!= svg

block content_title
	.content_title Градостроительные работы
	.works_navigator
		img.work_navigate.regions(src='/images/design/icons/selectors/regions.png')
		img.work_navigate.map(src='/images/design/icons/selectors/map.png')

